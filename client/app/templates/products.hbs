{{#each controller.products}}
	<div class="panel panel-success col-xs-12 col-md-5 col-lg-3" style="min-height:700px;padding:0px;margin:5px 5px 5px 0px">
	  <div class="panel-heading">
	    <h3 class="panel-title">{{name}}</h3>
	  </div>
	  <div class="panel-body">
	    <img style="height:auto;width:90%;margin:10px auto;" {{bind-attr src=link_to_image}}>
	    <p>
	    	<strong>PRICE:</strong>
	    	{{price}}
	    </p>
	    <p>
	    	<strong>MERCHANT:</strong>
	    	{{merchantID.content.name}}
	    </p>
	    <p>
	    	<strong>CATEGORY:</strong>
	    	{{#each categoryID.content.content}}
	    		<span class="label label-info" style="margin:5px;font-size:14px;">{{name}}<span>  
	    	{{/each}}
	    </p>
	  </div>
	</div>
{{/each}}